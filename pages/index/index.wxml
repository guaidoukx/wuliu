<!-- 此处是一个swiper轮播 -->
<swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" circular="{{circular}}">
  <block>
    <swiper-item>
      <image widthFix class='banner' src="../image/index_banner.png"></image>
    </swiper-item>
    <swiper-item>
      <image widthFix class='banner' src="../image/index_banner.png"></image>
    </swiper-item>
    <swiper-item>
      <image widthFix class='banner' src="../image/index_banner.png"></image>
    </swiper-item>
  </block>
</swiper>

<!-- 包裹尺寸 -->
<view class='package'>
  <text class='describe'>输入包裹尺寸，预估月租金</text>
  <view class='info'>
    <view class='input_box'>
      <view class='property'>长</view>
      <input class='num' type='number' placeholder='CM' placeholder-class='right'></input>
    </view>
    <view class='input_box'>
      <view class='property'>宽</view>
      <input class='num' type='number' placeholder='CM' placeholder-class='right'></input>
    </view>
  </view>
  <view class='kong'></view>
  <view class='info'>
    <view class='input_box'>
      <view class='property'>高</view>
      <input class='num' type='number' placeholder='CM' placeholder-class='right'></input>
    </view>
    <view class='input_box'>
      <view class='unex_property'>预估月租金</view>
      <input class='num' type='number' placeholder='--' disabled placeholder-class='right'></input>
    </view>
  </view>
  <button class='storage' bindtap='order'>存放</button>
  <text class='baoxian'>太平洋保险承保</text>
</view>
