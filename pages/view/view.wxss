/* pages/view/view.wxss */
page{
  background: #ededed;
}
.view{
  width: 100%;
  height: 832rpx;
  background: #ffffff;
  margin-top: 16rpx;
}
.inputList{
  width: 100%;
  height: 90rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 2rpx solid #ededed;
}
label{
  font-size: 32rpx;
  height: 90rpx;
  line-height: 90rpx;
  width: 130rpx;
  margin-left: 22rpx;
  font-weight: bold
}
#name{
  width: 70%;
  height: 90rpx;
  margin-right: 24rpx;
  text-align: right;
}
.name{
  font-size: 26rpx;
  line-height: 26rpx;
  color: #999999;
}
#tel{
  width: 70%;
  height: 90rpx;
  margin-right: 24rpx;
  text-align: right;
}
.tel{
  font-size: 26rpx;
  line-height: 26rpx;

  color: #999999;
}
.textList{
  width: 100%;
  height: 400rpx;
  display: flex;
  justify-content: space-between
}
.textview{
  width: 90%;
  height: 320rpx;
  margin-right: 24rpx;
  text-align: right;
  font-size: 26rpx;
  color: #999999;
  line-height: 39rpx;
  padding: 20rpx 0;
}
