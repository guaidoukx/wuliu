.upload{
  width: 278rpx;
  height: 190rpx;
  border: 2rpx solid #e6e6e6;
  margin: 20rpx 0 0 24rpx;
}
.upload_pic{
  width: 68rpx;
  height: 60rpx;
  display: block;
  margin: 32rpx auto 0;
}
.describe{
  width: 104rpx;
  height: 26rpx;
  font-size: 26rpx;
  line-height: 26rpx;
  margin: 32rpx auto 0;
}
.submit{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 98rpx;
  background: #3d4663;
  font-size: 30rpx;
  line-height: 98rpx;
  color: #ffffff;
  border-radius:0;
}
.rexian{
  width: 100%;
  height: 88rpx;
  bottom: 98rpx;
  left: 0
}
.tels{
  width: 100%;
  height: 88rpx;
  font-size: 24rpx;
  line-height: 88rpx;
  text-align: center;
  color: #666666
}
.kefu{
  width: 200rpx;
  height: 54rpx;
  background: #aaaaaa;
  border-top-left-radius: 27rpx;
  border-bottom-left-radius: 27rpx;
  position: fixed;
  bottom:118rpx;
  right: 0;
  display: flex;
  justify-content: space-around
}
.kufu_pic{
  width: 32rpx;
  height: 34rpx;
  display: block;
  margin: 10rpx 0 0 26rpx;
}
.kefu_describe{
  width: 102rpx;
  height: 54rpx;
  font-size: 24rpx;
  line-height: 54rpx;
  color:#ededed;
}