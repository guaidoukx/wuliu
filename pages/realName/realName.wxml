<!--pages/realName/realName.wxml-->
<view class='main'>
  <form bindsubmit="formSubmit"> 
    <view class='form'>
      <view class='inputBox'>
        <label for='name'>姓名</label>
        <input id="name" name="name" type='text' placeholder='请输入您的真实姓名' placeholder-class='name'></input>
      </view>
      <view class='inputBox'>
        <label for='id'>工号</label>
        <input id="id" name="id" type='text' placeholder='请输入您的工号' placeholder-class='id'></input>
      </view>
      <view class='inputBox'>
        <label for='tel'>手机号码</label>
        <input id="tel" name="tel" type='number' placeholder='请输入您的手机号码' placeholder-class='tel'></input>
      </view>
      <view class='inputBoxCode'>
        <label for='code'>验证码</label>
        <input id="code" name="code" type='number' placeholder='请输入您收到的验证码' placeholder-class='code'></input>
        <button class='codeBtn'>获取验证码</button>
      </view>
    </view>
    <button class='submit' form-type='submit'>确认提交</button>
  </form>
</view>
<!-- 热线 -->
<view class='rexian' style='position:{{display}};height:{{height}};'>
  <view class='tels'>服务热线：4008-888-999</view>
</view>
