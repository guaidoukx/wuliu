/* pages/realName/realName.wxss */
page{
  background: #ededed;
  height: auto;
}
.form{
  width: 100%;
  height: 780rpx;
  margin-top: 16rpx;
  background: #ffffff;
}
.inputBox{
  width: 100%;
  height: 90rpx;
  border-bottom:2rpx solid #ededed;
  display: flex;
  justify-content: space-between;
  padding:0 0 0 24rpx;
}
label{
  font-size: 32rpx;
  font-weight: bold;
  line-height: 90rpx;
}
#name{
  width: 70%;
  height: 90rpx;
  margin-right: 48rpx;
  text-align: right;
  font-size: 24rpx;
  color: #999999;
}
.name{
  font-size: 24rpx;
  line-height: 90rpx;
  color: #999999;
}
#id{
  width: 70%;
  height: 90rpx;
  margin-right: 48rpx;
  text-align: right;
  font-size: 24rpx;
  color: #999999;
}
.id{
  font-size: 24rpx;
  line-height: 90rpx;
  color: #999999;
}
.inputBoxCode{
  width: 100%;
  height: 90rpx;
  border-bottom:2rpx solid #ededed;
  display: flex;
  justify-content: space-around;
  padding:0 0 0 24rpx;
}
#code{
  width: 52%;
  height: 90rpx;
  text-align: right;
  font-size: 24rpx;
  color: #999999;
}
.code{
  font-size: 24rpx;
  line-height: 90rpx;
  color: #999999;
}
.codeBtn{
  width: 164rpx;
  height: 54rpx;
  border-radius: 27rpx;
  background: #3d4663;
  font-size: 24rpx;
  line-height: 54rpx;
  color:#ffffff;
  margin-top: 18rpx;
}
.codeBtn::after{
  border:none;
}
.unload{
  width: 100%;
  height: 252rpx;
  border-bottom: 2rpx solid #ededed;
  display: flex;
  justify-content: space-between;
  padding:0 24rpx 0 24rpx;
}
.idCard{
  font-size: 32rpx;
  font-weight: bold;
  line-height: 252rpx;
}
.upload_pic{
  width: 278rpx;
  height: 190rpx;
  border:2rpx solid #e6e6e6;
  border-radius: 4rpx;
  margin: 30rpx 48rpx;
}
.pic{
  width: 68rpx;
  height: 60rpx;
  display: block;
  margin: 32rpx auto 0;
}
.describe{
  width: 100%;
  height: 98rpx;
  font-size: 24rpx;
  color: #999999;
  line-height: 98rpx;
  text-align: center;
}
.submit{
  width: 100%;
  height: 98rpx;
  position: absolute;
  bottom:0;
  left:0;
  background: #3d4663;
  color: #ffffff;
  font-size: 30rpx;
  line-height: 98rpx;
  text-align: center;
  border-radius: 0;
}
