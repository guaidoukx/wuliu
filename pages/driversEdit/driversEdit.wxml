<!--pages/realName/realName.wxml-->
<view class='main'>
  <form bindsubmit="formSubmit"> 
    <view class='form'>
      <view class='inputBox'>
        <label for='id'>工号</label>
        <input id="id" disabled="true" name="id" type='text' placeholder='{{id}}' placeholder-class='id'></input>
      </view>
      
      <view class='inputBox'>
        <label for='tel'>手机号码</label>
        <input id="tel" name="tel" type='number' placeholder='请输入您的手机号码' placeholder-class='tel'></input>
      </view>
      <view class='inputBox'>
        <label for='type'>驾照类型</label>
        <input id="type" name="type" type='text' placeholder='请输入您的驾照类型' placeholder-class='type'></input>
      </view>
    </view>
    <button class='submit' form-type='submit'>确认提交</button>
  </form>
</view>
<!-- 热线 -->
<view class='rexian' style='position:{{display}};height:{{height}};'>
  <view class='tels'>服务热线：4008-888-999</view>
</view>
<view class='kefu'>
  <image class='kufu_pic' src='../image/kefu.png'></image>
  <view class='kefu_describe'>在线客服</view>
</view>