.title {
  width: 198rpx;
  height: 38rpx;
  margin: 122rpx auto;
}

.form {
  width: 80%;
  margin: auto;
  height: 280rpx;
}

.listInput {
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 90rpx;
  border-bottom: 3rpx solid #bdbdbd;
}

.listInput2 {
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 90rpx;
  border-bottom: 3rpx solid #bdbdbd;
  margin-top: 16rpx;
}

.listInput3 {
  width: 100%;
  height: 80rpx;
  position: relative;
}

label {
  width: 13%;
  font-size: 24rpx;
  line-height: 90rpx;
  color: #222;
}

.tel {
  font-size: 26rpx;
  line-height: 90rpx;
  color: #818181;
}

#tel {
  width: 90%;
  height: 90rpx;
  text-align: left;
  margin-left: 20rpx;
}

.code {
  font-size: 26rpx;
  color: #818181;
}

#code {
  font-size: 26rpx;
  width: 90%;
  height: 90rpx;
  text-align: left;
  margin-left: 20rpx;
}

.click_code {
  margin-right: 24rpx;
  font-size: 26rpx;
  line-height: 90rpx;
  color: #c7c7c7;
}

radio {
  margin-top: 26rpx;
  transform: scale(0.5);
  zoom: 0.6;
  /*  进行缩小*//* opacity: 0 */
}

image {
  position: absolute;
  top: 26rpx;
  left: 2rpx;
  width: 26rpx;
  height: 26rpx;
}

.isAgree {
  position: absolute;
  top: 22rpx;
  left: 44rpx;
  font-size: 24rpx;
  color: #333;
}

.book {
  position: absolute;
  top: 22rpx;
  left: 101rpx;
  font-size: 24rpx;
  color: #3d4663;
}

.submit {
  margin-top: 270rpx;
  width: 552rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background: #9b9b9b;
  font-size: 26rpx;
  color: #fff;
  line-height: 80rpx;
}

.submit:after {
  border: 2rpx solid #8e8e8e;
}
