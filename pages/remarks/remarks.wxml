<!--pages/remarks/remarks.wxml-->
<view class='main'>
  <form>
    <view class='remarks'>
      <view class='name'>备注</view>
      <textarea placeholder='避免遗忘请备注物品信息'></textarea>
      <view class='upload'>
        <image class='img' src='../image/photo.png'></image>
        <view class='word'>添加照片</view>
      </view>
    </view>
    <button class='submit' form-type='submit'>确认提交</button>
  </form>
</view>
